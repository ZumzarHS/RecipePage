@model RecipePage.Models.AddRecipeViewModel

<h1>Add Recipe</h1>
<form method="post">

    <div class="mt-3">
        <label for="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title">
    </div>

    <div class="mt-3">
        <label for="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>

    <div class="mt-3" id="ingredientContainer">
        <label for="ingredients">Ingredients</label>
        <!-- First ingredient -->
        <div class="ingredient">
            <input type="text" class="form-control" asp-for="ListOfIngredients[0].Name" placeholder="Ingredient name">
            <input type="text" class="form-control" asp-for="ListOfIngredients[0].Amount" placeholder="Amount">
            <input type="text" class="form-control" asp-for="ListOfIngredients[0].Units" placeholder="Units">
            <input type="text" class="form-control" asp-for="ListOfIngredients[0].Note" placeholder="Note">
        </div>
    </div>
    <button type="button" class="btn btn-secondary" id="addIngredientBtn">Add Ingredient</button>

    <div class="mt-3">
        <label for="form-label">Cooking Time</label>
        <input type="time" class="form-control" asp-for="CookingTime" placeholder="hours:minutes">
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>