@{
}

@model RecipePage.Models.Entities.Recipe

<h1>Edit Recipe</h1>

@if (Model is null)
{
    <p>No recipe was found with this id!</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label for="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly>
        </div>

        <div class="mt-3">
            <label for="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Title">
        </div>

        <div class="mt-3">
            <label for="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description">
        </div>

        <div class="mt-3">
            <label for="form-label">Ingredients</label>
            <input type="text" class="form-control" asp-for="ListOfIngredients">
        </div>

        <div class="mt-3">
            <label for="form-label">Cooking Time</label>
            <input type="time" class="form-control" asp-for="CookingTime" placeholder="hours:minutes">
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Recipes">Delete</button>
        </div>
    </form>
}